{
  "name": "@inspatial/hooks",
  "version": "0.0.2",
  "sideEffects": false,
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@inspatial/eslint-config": "workspace:*",
    "@inspatial/tsconfig": "workspace:*",
    "eslint": "^8.57.1",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@inspatial/props": "workspace:*",
    "next-safe-action": "^7.9.3",
    "tailwind-variants": "^0.2.1"
  },
  "peerDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "react": "^18.3.1 || ^19.0 || ^19.0.0-rc",
    "react-dom": "^18.3.1 || ^19.0 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
