{
  "name": "@inspatial/core",
  "version": "0.0.1",
  "private": false,
  "license": "Apache-2.0",
  "homepage": "https://www.inspatial.dev",
  "repository": "https://github.com/InSpatial-Labs/inspatial-core",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/InSpatial-Labs/inspatial-core/issues",
  "description": "InSpatial Core",
  "keywords": [
    "inspatial",
    "spatial",
    "xr",
    "webxr",
    "webgpu",
    "openXR",
    "ar",
    "vr",
    "augmented-reality",
    "virtual-reality",
    "spatial-computing",
    "visionOS",
    "visionPro",
    "horizonOS",
    "meta-quest",
    "metaverse",
    "native"
  ],
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*",
    "packages/core/*",
    "packages/core/kit",
    "packages/core/kit/button",
    "packages/utilities/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:fresh": "turbo run build --force",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3"
  },
  "packageManager": "pnpm@8.15.6"
}
